<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".views.SuccesRegisActivity">

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/lineratas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/btn_explore"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:layout_marginTop="16dp"
            android:id="@+id/imageView4"
            android:layout_width="270dp"
            android:layout_height="320dp"
            android:src="@drawable/suksesdaftar" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/kufamsemibold"
            android:lineSpacingExtra="9dp"
            android:text="Kamu Hebat"
            android:textAlignment="center"
            android:textColor="@color/hitamPrimary"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/kufamsemibold"
            android:lineSpacingExtra="9dp"
            android:text="Selamat datang pada MeyShop\ndan pilih barangmu"
            android:textAlignment="center"
            android:textColor="@color/abuabu"
            android:textSize="14sp" />
    </LinearLayout>



    <Button
        android:id="@+id/btn_explore"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_btn_masuk"
        android:fontFamily="@font/kufammedium"
        android:text="@string/jelajah_sekarang"
        android:textColor="@color/putih"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lineratas" />

</androidx.constraintlayout.widget.ConstraintLayout>