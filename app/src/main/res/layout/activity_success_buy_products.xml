<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".views.SuccessBuyProductsActivity">

    <LinearLayout
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:id="@+id/linearLayout1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/btn_bwh"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="200dp"
            android:layout_height="270dp"
            android:src="@drawable/suksesdaftar" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/kufamsemibold"
            android:lineSpacingExtra="9dp"
            android:text="Pembelian Berhasil"
            android:textAlignment="center"
            android:textColor="@color/hitamPrimary"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/kufamsemibold"
            android:lineSpacingExtra="9dp"
            android:text="Pakaian anda akan segera tiba"
            android:textAlignment="center"
            android:textColor="@color/abuabu"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/btn_bwh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linearLayout1"
        >
        <Button
            style="@style/btn_orangeprimary"
            android:id="@+id/btn_viewClothes"
            android:layout_marginStart="48dp"
            android:layout_marginEnd="48dp"
            android:text="@string/btn_view_clothes"/>

        <Button
            style="@style/btn_whiteprimary"
            android:layout_marginTop="8dp"
            android:id="@+id/btn_myDashboard"
            android:layout_marginStart="48dp"
            android:layout_marginEnd="48dp"
            android:text="@string/btn_my_dashboard" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>