<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/myclothesdetails"
        android:weightSum="4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/gambar_order_product"
            android:layout_weight="1"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:src="@color/colorAccent" />

        <LinearLayout
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/nama_order_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kufamregular"
                android:textColor="@color/hitamPrimary"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/harga_order_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kufamregular"
                android:textColor="@color/abuabu"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/jumlah_barang_order_product"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:textAlignment="textEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kufamregular"
            android:text="2 Pieces"
            android:textColor="@color/hitamPrimary"
            android:textSize="14dp" />

    </LinearLayout>

</LinearLayout>